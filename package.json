{
  "devDependencies": {
    "@slidev/cli": "^52.6.0",
    "@slidev/theme-default": "^0.25.0",
    "concurrently": "^9.2.1",
    "vitepress": "^2.0.0-alpha.12"
  },
  "scripts": {
    "dev": "concurrently \"npm run docs:dev\" \"npm run slides:dev\" \"npm run slides:2025\" \"npm run slides:cpp\" --names \"docs,demo,2025,cpp\" --prefix-colors \"cyan,magenta,green,blue\"",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "slides:dev": "slidev docs/slides/demo.md --port 3030",
    "slides:build": "slidev build docs/slides/demo.md",
    "slides:export": "slidev export docs/slides/demo.md",
    "slides:2025": "slidev docs/slides/2025-guide.md --port 3031",
    "slides:2025:build": "slidev build docs/slides/2025-guide.md",
    "slides:2025:export": "slidev export docs/slides/2025-guide.md",
    "slides:cpp": "slidev docs/slides/cpp-basics.md --port 3032",
    "slides:cpp:build": "slidev build docs/slides/cpp-basics.md",
    "slides:cpp:export": "slidev export docs/slides/cpp-basics.md"
  }
}
