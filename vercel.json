{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run cf:build",
  "outputDirectory": ".cloudflare-dist",
  "rewrites": [
    {
      "source": "/decks/demo/:path*",
      "destination": "/decks/demo/index.html"
    },
    {
      "source": "/decks/guide-2025/:path*",
      "destination": "/decks/guide-2025/index.html"
    },
    {
      "source": "/decks/cpp-basics/:path*",
      "destination": "/decks/cpp-basics/index.html"
    },
    {
      "source": "/decks/cpp-function-stl/:path*",
      "destination": "/decks/cpp-function-stl/index.html"
    },
    {
      "source": "/decks/algorithm-intro/:path*",
      "destination": "/decks/algorithm-intro/index.html"
    }
  ]
}
